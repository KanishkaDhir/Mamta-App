<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/blurimage"
    tools:context="com.hackathon.missionindradhanush.SliderActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/sideviewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dlayout"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:textAlignment="viewEnd" />

    <LinearLayout
        android:id="@+id/dlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/sideviewpager"
        android:layout_toEndOf="@+id/dlayout"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:shadowColor="@android:color/transparent"
        android:text="SKIP"
        android:textAlignment="gravity"
        android:textColor="@color/colorwhite" />

</RelativeLayout>

